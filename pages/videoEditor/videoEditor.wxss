/* pages/videoEditor/videoEditor.wxss */
@import "../../assets/icon-style.wxss";

.handle {
  padding: 10rpx;
  background-color: #f5f5f5;
}

.left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
}

.title {
  margin: 10rpx;
  padding: 10rpx 0 0 0;
  font-size: 60rpx;
  font-weight: 700;
  height: auto;
  /* width: auto; */
  line-height: 70rpx;
  /* border-radius: 10rpx; */
}

.input-container {
  display: flex;
  align-content: flex-end;
  border-bottom: 7rpx solid rgb(56, 56, 56);
  /* border-radius: 10px; */
  position: relative;
  padding: 10px;
}

.input-textarea {
  width: 100%;
  min-height: 50rpx;
  resize: none;
  font-size: 35rpx;
  line-height: 45rpx;
}

/* TODO:添加当未上传时禁用纸飞机 */
.submit {
  width: 90rpx;
  text-align: center;
  padding: 0;
  background-color: transparent;
}

.submit[disabled]:not([type]) {
  background-color: transparent;
  color: rgba(0, 0, 0, .18);
}

/* pages/video/video.wxss */
.main {
  width: 100%;
}

.playerInfo {
  margin: 20rpx 20rpx 0 20rpx;
}

.video {
  margin: 50rpx 0;
  border: 2rpx solid #cccccc;
}

.videoContent {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 700rpx;
  position: relative;
}

.footerbtn {
  display: flex;
  padding: 20rpx 0;
  background-color: #f5f5f5;
}

.iconfont {
  display: inline-block;
  padding: 8px 8px;
  width: 24px;
  height: 24px;
  cursor: pointer;
  font-size: 20px;
}

.button {
  width: 90rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin: auto;
  font-size: 40rpx;
  color: white;
  background-color: #235c99 !important;
  border-radius: 20%;
}

.footerbtn .delete{
  background-color: #aa2121 !important;
}

.footerbtn .upload{
  background-color: #21aa21 !important;
}